<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="UTF-8">
  <title>Cleaning Schedule</title>
  <style>
    .form-container {
      display: none;
      margin-top: 20px;
      padding: 20px;
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 8px;
    }

    .show {
      display: block;
    }

    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }

    button:hover {
      background-color: #0056b3;
    }

    .input-field {
      margin-bottom: 15px;
      width: 100%;
      padding: 8px;
    }
  </style>
</head>

<body>
  <h1>Cleaning Schedule</h1>

  <button id="create-btn">Create a New Cleaning Schedule</button>

  <!-- Form Container -->
  <div class="form-container" id="form-container">
    <h2>Create New Cleaning Schedule</h2>
    <form method="POST" action="/create-cleaning-schedule">
      <label for="RoomNumber">Room Number:</label>
      <input class="input-field" type="number" id="RoomNumber" name="RoomNumber" required>

      <label for="TaskDescription">Task Description:</label>
      <input class="input-field" type="text" id="TaskDescription" name="TaskDescription" required>

      <label for="Frequency">Frequency:</label>
      <select class="input-field" id="Frequency" name="Frequency" required>
        <option value="Daily">Daily</option>
        <option value="Weekly">Weekly</option>
      </select>

      <button type="submit">Save</button>
    </form>
  </div>

  <script>
    document.getElementById('create-btn').addEventListener('click', function () {
      const formContainer = document.getElementById('form-container');
      formContainer.classList.toggle('show');
    });
  </script>

