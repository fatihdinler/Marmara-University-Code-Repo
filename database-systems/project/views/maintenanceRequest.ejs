<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="UTF-8">
  <title>Maintenance Requests</title>
  <style>
    .form-container {
      margin-top: 20px;
      padding: 20px;
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 8px;
    }

    .input-field {
      margin-bottom: 15px;
      width: 100%;
      padding: 8px;
    }

    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }

    button:hover {
      background-color: #0056b3;
    }

    .status-message {
      color: green;
      font-weight: bold;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <h1>Maintenance Requests</h1>

  <div class="form-container">
    <h2>Create New Maintenance Request</h2>
    <label for="RoomNumber">Room Number:</label>
    <input class="input-field" type="number" id="RoomNumber" required>

    <label for="IssueDescription">Issue Description:</label>
    <input class="input-field" type="text" id="IssueDescription" required>

    <button id="save-btn">Create Maintenance Request</button>
  </div>

  <p id="status-message" class="status-message"></p>

  <script>
    document.getElementById('save-btn').addEventListener('click', async function () {
      const RoomNumber = document.getElementById('RoomNumber').value;
      const IssueDescription = document.getElementById('IssueDescription').value;

      const requestBody = {
        RoomNumber: parseInt(RoomNumber),
        IssueDescription
      };

      try {
        const response = await fetch('/execute-maintenance-sp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(requestBody)
        });

        const result = await response.json();
        if (result.success) {
          document.getElementById('status-message').innerText = 'Maintenance Request başarıyla oluşturuldu!';
          setTimeout(() => location.reload(), 2000); // 2 saniye sonra sayfa yenilenir
        } else {
          document.getElementById('status-message').innerText = 'Hata oluştu: ' + result.message;
        }
      } catch (error) {
        document.getElementById('status-message').innerText = 'Beklenmeyen bir hata oluştu!';
        console.error(error);
      }
    });
  </script>

  <a href="/">Ana Sayfaya Dön</a>
</body>

</html>